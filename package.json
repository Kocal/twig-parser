{
  "name": "@kocal/twig-parser",
  "version": "0.0.0-development",
  "description": "JavaScript parser for Twig files, based on Twing.",
  "keywords": [
    "javascript",
    "twig",
    "parser"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "typings": "dist/index.d.ts",
  "repository": "https://github.com/Kocal/twig-parser.git",
  "author": "Hugo Alliaume <kocal@live.fr>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint {src,test}/**/*.{ts,js}",
    "clean": "rm -fr dist",
    "prebuild": "npm run clean",
    "build": "rollup -c",
    "build:browser": "rollup -c rollup.browser.config.js",
    "build:all": "npm run build && npm run build:browser",
    "prepack": "npm run build:all",
    "pretest": "npm run build",
    "test": "jest"
  },
  "devDependencies": {
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "rollup": "^1.9.0",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.20.1",
    "typescript": "^3.4.2"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "eslint": "^5.16.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/standard"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "standard"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
